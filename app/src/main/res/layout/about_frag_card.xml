<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_elevate"
        card_view:cardBackgroundColor="@color/bg_mat_dark"
        card_view:cardCornerRadius="@dimen/cardview_rounding">

        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/logo_card" android:background="?android:selectableItemBackground" android:padding="@dimen/cardview_padding">
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/logo" tools:ignore="ContentDescription" />
            <Space android:layout_width="match_parent" android:layout_height="2dip" />
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/logo2" tools:ignore="ContentDescription" />
                <Space android:layout_width="20dip" android:layout_height="wrap_content" />
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="25dip" android:src="@drawable/tsmsigbanner" tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_pref_height"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_elevate"
        card_view:cardBackgroundColor="@color/bg_mat_dark"
        card_view:cardCornerRadius="@dimen/cardview_rounding">

        <LinearLayout android:orientation="horizontal" android:id="@+id/link1_card" android:layout_width="match_parent" android:layout_height="match_parent" android:clickable="true" android:background="?android:selectableItemBackground" android:padding="@dimen/cardview_padding">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:id="@+id/icon" android:src="@drawable/xda_icon" tools:ignore="ContentDescription" />
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView  android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:text="@string/link_title" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/cardview_pref_title" android:gravity="bottom" />
                <TextView  android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:text="@string/link_summary" android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="top" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_pref_height"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_elevate"
        card_view:cardBackgroundColor="@color/bg_mat_dark"
        card_view:cardCornerRadius="@dimen/cardview_rounding">

        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/credits_card" android:clickable="true" android:background="?android:selectableItemBackground" android:paddingTop="@dimen/cardview_padding" android:paddingBottom="@dimen/cardview_padding" android:paddingStart="@dimen/cardview_pref_padding" android:paddingEnd="@dimen/cardview_padding">
            <TextView  android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:text="@string/miscinfo_title" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/cardview_pref_title" android:gravity="bottom" />
            <TextView  android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1" android:text="@string/miscinfo_summary" android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="top" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>