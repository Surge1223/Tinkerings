<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal">

    <android.dwitherell.tinkerings.utils.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="landscape"
        android:layerType="software"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_color_picker"
            android:id="@+id/colorpick_title"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/hex"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/hex"
                android:hint="@string/hex_hint"
                android:imeOptions="flagNoExtractUi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="9"
            />

            <Button
                android:id="@+id/enter"
                android:text="@string/hex_check_button_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/widget_list_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:text="@string/longpress_info"
            android:textAppearance="?android:attr/textAppearanceSmall"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/white_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="0.5"
                />

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/black_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/default_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="0.5"
                />

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/userset1_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/userset2_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="0.5"
                />

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/userset3_panel"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/press_color_to_apply"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/old_color_panel"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="0.5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/color_down_arrow"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                />

            <android.dwitherell.tinkerings.utils.ColorPickerPanelView
                android:id="@+id/new_color_panel"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="0.5"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>